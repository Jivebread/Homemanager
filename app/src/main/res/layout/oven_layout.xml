<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="DoorClosed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvenRunningid"
        android:layout_alignEnd="@+id/OvenRunningid"
        android:layout_marginTop="72dp"
        android:id="@+id/OvenDoorClosedid"
        android:textColor="?attr/editTextColor"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/OvenDoorClosedid"
        android:layout_toEndOf="@+id/OvenRunningid"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="67dp"
        android:id="@+id/RunningToggleid" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OvenRunningid"
        android:layout_alignEnd="@+id/RunningToggleid"
        android:layout_marginTop="54dp"
        android:id="@+id/ClosedToggleid" />

    <TextView
        android:text="CurrentTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ClosedToggleid"
        android:layout_alignStart="@+id/OvenDoorClosedid"
        android:layout_marginTop="42dp"
        android:id="@+id/CurrentOvenTemp"
        android:textColor="?attr/editTextColor"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="DesiredTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CurrentOvenTemp"
        android:layout_alignEnd="@+id/CurrentOvenTemp"
        android:layout_marginTop="53dp"
        android:id="@+id/DesiredOvenTemp"
        android:textColor="?attr/editTextColor"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="0   F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RealCurrentTempid"
        android:layout_alignBaseline="@+id/CurrentOvenTemp"
        android:layout_alignBottom="@+id/CurrentOvenTemp"
        android:layout_alignEnd="@+id/ClosedToggleid"
        android:layout_marginEnd="13dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="?attr/editTextColor"
        android:textSize="18sp" />

    <TextView
        android:text="0  F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DesiredOvenTempid"
        android:layout_above="@+id/ovensetid2"
        android:layout_alignStart="@+id/RealCurrentTempid"
        android:fontFamily="sans-serif-condensed"
        android:textColor="?attr/editTextColor"
        android:textSize="18sp" />

    <Button
        android:text="SET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/ovensetid2"
        android:layout_below="@+id/DesiredOvenTemp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="OvenRunning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="144dp"
        android:id="@+id/OvenRunningid"
        android:textColor="?attr/editTextColor"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>